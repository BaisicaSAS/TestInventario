{% extends "InventarioFrontBundle:Default:index.html.twig" %}

{% block body %}

    <div id="menubar"> 
        <ul id="menu">
          <!-- put class="selected" in the li tag for the selected page - to highlight which page you're on -->
          <li class="selected"><a href="{{ path('listTerceros') }}">Lista de terceros</a></li>
          <li><a href="{{ path('newTerceros') }}">Crear tercero</a></li>
        </ul>
    </div>    
    
    <table>
    <tr>
        <td>Tipo Doc</td>
        <td>Documento</td>
        <td>Razón Social</td>
        <td>Cliente/Proveedor</td>
        <td>Descuento</td>
        <td>Dirección</td>
        <td>Teléfonos</td>
        <td>Activo</td>
     </tr>

    {% for terceros in Terceros %}
     <tr>
        <td> {{terceros.txtipdoc}} </td>
        <td> {{terceros.txdocumento}} </td>
        <td> {{terceros.txnomtercero}} </td>
        <td> {{terceros.intipoter}} </td>
        <td> {{terceros.txdescuento}}% {{terceros.txdiasdescuento}} dias {{terceros.intipodesc}} </td>
        <td> {{terceros.txdireccion}} </td>
        <td> {{terceros.txtelefonos}} </td>
        <td> {{terceros.inactivo}} </td>
     </tr>
    {% endfor %}    
    </table>
{% endblock %}
    